<!DOCTYPE html>

<html lang="pt-BR">
    <head>
        <meta charset="utf-8" />
        <meta content="width=device-width, initial-scale=1.0" name="viewport" />
        
        <title><%= titulo %> a</title>
        <link rel='stylesheet' href='/stylesheets/style.css' />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">

        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdn.tailwindcss.com"></script>

        <link href="/style/all.min.css" rel="stylesheet" />
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&amp;display=swap" rel="stylesheet" />
    </head>

    <body class="bg-blue-900 p-0 h-screen w-full">
        <div class="bg-orange-600 w-full p-0 m-0 h-[5%]">
            <button id="openBtn" class="p-2 m-4 text-white rounded">
                Abrir Menu
            </button>
        </div>
        
        <div id="sidebar" class="fixed top-0 left-0 w-[15%] h-full bg-orange-600 text-white py-4">
            <div class="mx-4 mb-4 bg-white rounded">
                <img src="/images/assets/Logo.png" class="w-full" alt="FitTrack">
            </div>
            
            <ul>
                <a href="/admin/dashboard">
                    <li class="py-2 px-2 border hover:bg-orange-800 border-gray-600">Início</li>
                </a>

                <li>
                    <button id="btnUsuarios" class="w-full text-left py-2 px-2 border-b bg-orange-700 hover:bg-orange-800 border-gray-600 flex justify-between items-center">
                        Usuários
                        <svg id="arrowUsuarios" class="w-4 h-4 transition-transform" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                        </svg>
                    </button>

                    <ul id="submenuUsuarios" class="pl-4 bg-orange-700 overflow-hidden transition-[max-height] duration-300 ease-in-out">
                        <a href="/admin/administradores"> 
                            <li class="py-1 px-2 border-b bg-orange-800 hover:bg-orange-800 border-gray-600 cursor-pointer">Administradores</li>
                        </a>
                        <a href="/admin/clientes">
                            <li class="py-1 px-2 border-b hover:bg-orange-800 border-gray-600 cursor-pointer">Clientes</li>
                        </a>
                    </ul>
                </li>
                <a href="/admin/treinos">
                    <li class="py-2 px-2 border-b hover:bg-orange-800 border-gray-600">Treinos</li>
                </a>
                <a href="/admin/exercicios">
                    <li class="py-2 px-2 border-b hover:bg-orange-800 border-gray-600">Exercícios</li>
                </a>
                <a href="/admin/categorias">
                    <li class="py-2 px-2 border-b hover:bg-orange-800 border-gray-600">Categorias</li>
                </a>
                <a href="/admin/estatisticas">
                    <li class="py-2 px-2 border-b hover:bg-orange-800 border-gray-600">Estatísticas</li>
                </a>
                <a href="/admin/logout">
                    <li class="py-2 px-2 border-b hover:bg-orange-800 border-gray-600">
                        Sair
                    </li>
                </a>
            </ul>
        </div>
        
        <div class="w-full h-[100%] flex">
            <div class="ml-auto w-[85%] p-10 h-[95%]">
                <div class="bg-white rounded-xl w-full h-[100%] border-2 border-orange-600 pb-12 pt-10">

                    <div class="flex flex-col items-end  h-full px-10">
                        <div class="flex-row mb-4">
                            <button onclick="openModal('postModal')" class="bg-green-500 rounded h-10 p-2 hover:bg-green-700 text-white font-bold">
                                Novo Administrador
                            </button>
                        </div>

                        <div class="overflow-x-auto border-2 border-orange-600 rounded-xl w-full h-[100%]">
                            <table class="w-full text-left text-blue-900">
                                <thead>
                                    <tr class="bg-blue-800 text-white">
                                        <th class="px-4 py-2">Código</th>
                                        <th class="px-4 py-2">Nome</th>
                                        <th class="px-4 py-2">Email</th>
                                        <th class="px-4 py-2 text-right">Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% administradores.forEach(admin => { %>
                                        <tr class="border-b border-orange-600 hover:bg-blue-700 hover:text-white">
                                            <td class="px-4 py-2"><%= admin.codigo %></td>
                                            <td class="px-4 py-2"><%= admin.nome %></td>
                                            <td class="px-4 py-2"><%= admin.email %></td>
                                            <td class="px-4 py-2 text-right">
                                                <a onclick="openModal('updateModal<%= admin.codigo %>')" class="text-blue-400 cursor-pointer hover:text-blue-300 mr-2">Atualizar</a>
                                                <a onclick="openModal('deleteModal<%= admin.codigo %>')"  class="text-red-400 cursor-pointer hover:text-red-300">Excluir</a>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <% administradores.forEach(admin => { %>
        
            <div id="updateModal<%= admin.codigo %>" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center transition-opacity duration-300 opacity-0 pointer-events-none">
                <div class="bg-white rounded-xl shadow-lg transform transition-all duration-300 scale-95 w-[400px]">                                                
                    <div class="rounded-t-xl bg-blue-800 text-center py-2">
                        <h2 class="text-xl text-white font-bold">Editar Cadastro</h2>                                                
                    </div>
                    <div id="msgResposta">
                    </div>            
                    
                    <form id="updateForm<%= admin.codigo %>" action="/admin/atualizarAdministrador/<%= admin.codigo %>?_method=PUT" method="POST" enctype="multipart/form-data">
                        <!-- <input type="hidden" name="_method" value="PUT"> -->
                        
                        <div class="flex flex-col items-center justify-center p-4 bg-white rounded-b-xl">
                        
                            <div class="w-full m-2">
                                <input type="text" name="nome" autocomplete="username" id="nome<%= admin.codigo %>" class="pl-1 w-full h-10 border border-blue-600 hover:border-blue-800 rounded focus:border-blue-800 focus:border-2 focus:outline-none" value="<%= admin.nome %>">
                            </div>
                            <div class="w-full m-2">
                                <input type="email" name="email" autocomplete="username" id="email<%= admin.codigo %>" class="pl-1 w-full h-10 border border-blue-600 hover:border-blue-800 rounded focus:border-blue-800 focus:border-2 focus:outline-none" value="<%= admin.email %>">
                            </div>
                            <div class="w-full m-2">
                                <input type="password" name="senha" autocomplete="current-password" id="senha<%= admin.codigo %>" class="pl-1 w-full h-10 border border-blue-600 hover:border-blue-800 rounded focus:border-blue-800 focus:border-2 focus:outline-none" value="<%= admin.senha %>">
                            </div>

                            
                            <div class="m-2 w-full flex flex-col">                                                            
                                <label for="foto<%= admin.codigo %>" class="px-4 py-2 w-50 bg-blue-600 text-white text-center rounded cursor-pointer hover:bg-blue-700">
                                    Selecionar imagem
                                </label>
                                <input type="file" id="foto<%= admin.codigo %>" name="foto" class="hidden" onchange="previewImage(event, 'preview<%= admin.codigo %>')">

                                <!-- Imagem clicável -->
                                <div class="flex justify-center mt-2">
                                    <label for="foto" class="cursor-pointer">
                                        <img id="preview<%= admin.codigo %>" src="<%= admin.foto %>" alt="Foto" class="w-32 h-32 object-cover rounded-lg border border-gray-400"/>
                                    </label>                                                        
                                </div>
                            </div>

                            <div class="flex justify-end">
                                <button type="submit" class="px-4 py-2 mr-2 bg-green-500 text-white font-bold rounded hover:bg-green-600">
                                    Salvar
                                </button>
                                <button type="button" onclick="closeModal('updateModal<%= admin.codigo %>')" class="px-4 py-2 font-bold bg-red-500 text-white rounded hover:bg-red-600">
                                    Fechar
                                </button>
                            </div>
                        </div>
                    </form>                                    
                </div>
            </div>

            <div id="deleteModal<%= admin.codigo %>" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center transition-opacity duration-300 opacity-0 pointer-events-none">
                <div class="bg-white rounded-xl shadow-lg transform transition-all duration-300 scale-95 w-[400px]">                                                
                    <div class="rounded-t-xl bg-red-700 text-center py-2">
                        <h2 class="text-xl text-white font-bold">Deletar Registro</h2>                                                
                    </div>
                    
                    <form id="deleteForm<%= admin.codigo %>" action="/admin/deletarAdministrador/<%= admin.codigo %>?_method=DELETE" method="POST" enctype="multipart/form-data">
                        <!-- <input type="hidden" name="_method" value="PUT"> -->
                        
                        <div class="flex flex-col items-center justify-center p-4 bg-white rounded-b-xl">
                        
                            <div class="text-center p-4">
                                <p>Está certo de que deseja deletar esta conta? isto irá remover esta conta permanentemente do sistema.</p>
                            </div>

                            <div class="flex justify-end">
                                <button type="submit" class="px-4 py-2 mr-2 bg-green-500 text-white font-bold rounded hover:bg-green-600">
                                    Confirmar
                                </button>
                                <button type="button" onclick="closeModal('deleteModal<%= admin.codigo %>')" class="px-4 py-2 font-bold bg-red-500 text-white rounded hover:bg-red-600">
                                    Fechar
                                </button>
                            </div>
                        </div>
                    </form>
                    <div id="msgResposta"></div>                                                
                </div>
            </div>

        <% }) %>

        <div id="postModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center transition-opacity duration-300 opacity-0 pointer-events-none">
            <div class="bg-white rounded-xl shadow-lg transform transition-all duration-300 scale-95 w-[400px]">                                                
                <div class="rounded-t-xl bg-blue-800 text-center py-2">
                    <h2 class="text-xl text-white font-bold">Novo Administrador</h2>                                                
                </div>
                
                <form id="postForm" action="/admin/novoAdministrador/" method="POST" enctype="multipart/form-data">
                    
                    <div class="flex flex-col items-center justify-center p-4 bg-white rounded-b-xl">
                    
                        <div class="w-full m-2">
                            <label for="nome" class="text-blue-600 font-bold">Nome</label>
                            <input type="text" autocomplete="name" name="nome" id="nome" class="pl-1 w-full h-10 border border-blue-600 hover:border-blue-800 rounded focus:border-blue-800 focus:border-2 focus:outline-none" placeholder="Nome">
                        </div>
                        <div class="w-full m-2">
                            <label for="email" class="text-blue-600 font-bold">Email</label>
                            <input type="email" autocomplete="username" name="email" id="email" class="pl-1 w-full h-10 border border-blue-600 hover:border-blue-800 rounded focus:border-blue-800 focus:border-2 focus:outline-none" placeholder="Email">
                        </div>
                        <div class="w-full m-2">
                            <label for="senha" class="text-blue-600 font-bold">Senha</label>
                            <input type="password" name="senha" id="senha" autocomplete="new-password" class="pl-1 w-full h-10 border border-blue-600 hover:border-blue-800 rounded focus:border-blue-800 focus:border-2 focus:outline-none" placeholder="Senha">
                        </div>

                        
                        <div class="m-2 w-full flex flex-col">                                                            
                            <label for="foto" class="px-4 py-2 w-50 bg-blue-600 text-white text-center rounded cursor-pointer hover:bg-blue-700">
                                Selecionar imagem
                            </label>
                            <input type="file" id="foto" name="foto" class="hidden" onchange="previewImage(event, 'preview')">

                            <!-- Imagem clicável -->
                            <div class="flex justify-center mt-2">
                                <label for="foto" class="cursor-pointer">
                                    <img id="preview" src="" alt="Foto" hidden class="w-32 h-32 object-cover rounded-lg border border-gray-400"/>
                                </label>                                                        
                            </div>
                        </div>

                        <div class="flex justify-end">
                            <button type="submit" class="px-4 py-2 mr-2 bg-green-500 text-white font-bold rounded hover:bg-green-600">
                                Salvar
                            </button>
                            <button type="button" onclick="closeModal('postModal')" class="px-4 py-2 font-bold bg-red-500 text-white rounded hover:bg-red-600">
                                Fechar
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>      
        
        
        <div id="overlay" class="hidden fixed inset-0 bg-black bg-opacity-50 z-40"></div>
        
        <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
        <script src="/javascript/modal.js"></script>
        <script src="/javascript/menu.js"></script>
        <script src="/javascript/imagem.js"></script>
        <script src="/javascript/formulario.js"></script>

        <script>
            document.addEventListener('DOMContentLoaded', () => {
                addFormSubmitListener('postForm', 'postModal');
                const administradores = <%- JSON.stringify(administradores) %>;

                administradores.forEach(admin => {
                    addFormSubmitListener('updateForm'+admin.codigo, 'updateModal'+admin.codigo);
                    addFormSubmitListener('deleteForm'+admin.codigo, 'deleteModal'+admin.codigo);
                })
                // Exibe toast se houver mensagem no localStorage
                const msg = localStorage.getItem('toastMessage');
                const type = localStorage.getItem('toastType');

                if (msg && type) {
                    toastr[type](msg);
                    localStorage.removeItem('toastMessage');
                    localStorage.removeItem('toastType');
                }
            });
        </script>
    </body>
</html>
